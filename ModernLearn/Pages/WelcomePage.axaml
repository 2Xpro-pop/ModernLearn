<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:app="using:ModernLearn"
			 xmlns:rxui="http://reactiveui.net/"
			 xmlns:vm="using:ModernLearn.ViewModels"
			 x:DataType="vm:WelcomePageVm"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="ModernLearn.Pages.WelcomePage">

	<UserControl.Styles>
		<Style Selector="Button.Large">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="Padding" Value="12,8"/>
		</Style>
	</UserControl.Styles>

	<Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="8" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300" MaxWidth="450" >

		<Button Content="{x:Static app:Resources.Start}"
				Command="{Binding StartCommand}"
				Classes="Large Colorful Primary"
				Theme="{StaticResource SolidButton}"/>

		<Button Content="{x:Static app:Resources.Authors}"
				Classes="Large Colorful Tertiary"
				Theme="{StaticResource SolidButton}"
				Grid.Row="1"/>

		<Button Content="{x:Static app:Resources.Options}"
				Classes="Large"
				Grid.Row="2"/>
	</Grid>

</UserControl>
